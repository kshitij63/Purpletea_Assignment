<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/flickr_title"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="#000"
        android:gravity="center"
        android:padding="4dp"
        android:text="this is the tiger found in everywhere"
        android:textColor="#FFF"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/flickr_image"
        app:layout_constraintTop_toBottomOf="@+id/flickr_image" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/flickr_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>